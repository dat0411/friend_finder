<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All group admins
    </h1>

    <a href="/group_admins/new" class="btn btn-block btn-outline-secondary">
      Add a new group admin
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "group_admin_templates/group_admins_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Group
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @group_admins.each do |group_admin| %>
      <tr>
        <td>
          <%= group_admin.id %>
        </td>

        <td>
          <% if group_admin.user.present? %>
            <a href="/users/<%= group_admin.user.id %>">
              <%= group_admin.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if group_admin.group.present? %>
            <a href="/groups/<%= group_admin.group.id %>">
              <%= group_admin.group.group_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(group_admin.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(group_admin.updated_at) %> ago
        </td>

        <td>
          <a href="/group_admins/<%= group_admin.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @group_admins, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
