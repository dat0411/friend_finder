<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Group admin #<%= @group_admin.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/group_admins" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @group_admin.user %>
          <a href="/group_admins/<%= @group_admin.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit group_admin
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @group_admin.user %>
          <a href="/delete_group_admin/<%= @group_admin.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete group_admin
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @group_admin.user.present? %>
          <a href="/users/<%= @group_admin.user_id %>">
            <%= @group_admin.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Group
      </dt>
      <dd>
        <% if @group_admin.group.present? %>
          <a href="/groups/<%= @group_admin.group_id %>">
            <%= @group_admin.group.group_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@group_admin.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@group_admin.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

