<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All travel plans
    </h1>

    <a href="/travel_plans/new" class="btn btn-block btn-outline-secondary">
      Add a new travel plan
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Plan description
        </th>

        <th>
          Start
        </th>

        <th>
          End
        </th>

        <th>
          Owner
        </th>

        <th>
          Status
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @travel_plans.each do |travel_plan| %>
      <tr>
        <!-- Display travel_plan.id start -->
        <td>
          <%= travel_plan.id %>
        </td>
        <!-- Display travel_plan.id end -->

        <!-- Display travel_plan.plan_description start -->
        <td>
          <%= travel_plan.plan_description %>
        </td>
        <!-- Display travel_plan.plan_description end -->

        <!-- Display travel_plan.start start -->
        <td>
          <%= travel_plan.start %>
        </td>
        <!-- Display travel_plan.start end -->

        <!-- Display travel_plan.end start -->
        <td>
          <%= travel_plan.end %>
        </td>
        <!-- Display travel_plan.end end -->

        <!-- Display travel_plan.owner_id start -->
        <td>
          <% if travel_plan.owner.present? %>
            <a href="/users/<%= travel_plan.owner.id %>">
              <%= travel_plan.owner.email %>
            </a>
          <% end %>
        </td>
        <!-- Display travel_plan.owner_id end -->

        <!-- Display travel_plan.status start -->
        <td>
          <%= travel_plan.status %>
        </td>
        <!-- Display travel_plan.status end -->

        <!-- Display travel_plan.location_id start -->
        <td>
          <% if travel_plan.location.present? %>
            <a href="/locations/<%= travel_plan.location.id %>">
              <%= travel_plan.location.user_id %>
            </a>
          <% end %>
        </td>
        <!-- Display travel_plan.location_id end -->

        <!-- Display travel_plan.created_at start -->
        <td>
          <%= time_ago_in_words(travel_plan.created_at) %> ago
        </td>
        <!-- Display travel_plan.created_at end -->

        <!-- Display travel_plan.updated_at start -->
        <td>
          <%= time_ago_in_words(travel_plan.updated_at) %> ago
        </td>
        <!-- Display travel_plan.updated_at end -->

        <td>
          <a href="/travel_plans/<%= travel_plan.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @travel_plans, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
