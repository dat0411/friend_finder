<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All travel plans
    </h1>

    <a href="/travel_plans/new" class="btn btn-block btn-outline-secondary">
      Add a new travel plan
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "travel_plan_templates/travel_plans_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Plan description
        </th>

        <th>
          Start
        </th>

        <th>
          End
        </th>

        <th>
          Owner
        </th>

        <th>
          Status
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @travel_plans.each do |travel_plan| %>
      <tr>
        <td>
          <%= travel_plan.id %>
        </td>

        <td>
          <%= travel_plan.plan_description %>
        </td>

        <td>
          <%= travel_plan.start %>
        </td>

        <td>
          <%= travel_plan.end %>
        </td>

        <td>
          <% if travel_plan.owner.present? %>
            <a href="/users/<%= travel_plan.owner.id %>">
              <%= travel_plan.owner.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= travel_plan.status %>
        </td>

        <td>
          <% if travel_plan.location.present? %>
            <a href="/locations/<%= travel_plan.location.id %>">
              <%= travel_plan.location.user_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(travel_plan.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(travel_plan.updated_at) %> ago
        </td>

        <td>
          <a href="/travel_plans/<%= travel_plan.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @travel_plans, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
