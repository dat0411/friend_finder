<form action="/create_group_membership_from_group" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <input type="hidden" name="group_id" value="<%= @group.id %>">

  <div class="form-group">
    <label for="admin_approval">
      Admin approval
    </label>

    <input type="text" id="admin_approval" name="admin_approval" class="form-control" value="<%= @group_membership.admin_approval %>">
  </div>

  <div class="form-group">
    <label for="user_accept">
      User accept
    </label>

    <input type="text" id="user_accept" name="user_accept" class="form-control" value="<%= @group_membership.user_accept %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create group membership
  </button>
</form>
