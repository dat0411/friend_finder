<!-- Form group_admin start -->
<form action="/create_group_admin_from_group" method="post">
<!-- Form group_admin end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @group_admin.user_id %>">
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for group_id start -->
  <!-- Input for group_id start -->
  <input type="hidden" name="group_id" value="<%= @group.id %>">
  <!-- Input for group_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create group admin
  </button>
</form>
