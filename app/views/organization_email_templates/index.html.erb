<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All organization emails
    </h1>

    <a href="/organization_emails/new" class="btn btn-block btn-outline-secondary">
      Add a new organization email
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Status
        </th>

        <th>
          Organization email
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @organization_emails.each do |organization_email| %>
      <tr>
        <!-- Display organization_email.id start -->
        <td>
          <%= organization_email.id %>
        </td>
        <!-- Display organization_email.id end -->

        <!-- Display organization_email.user_id start -->
        <td>
          <%= organization_email.user.email %>
        </td>
        <!-- Display organization_email.user_id end -->

        <!-- Display organization_email.status start -->
        <td>
          <%= organization_email.status %>
        </td>
        <!-- Display organization_email.status end -->

        <!-- Display organization_email.organization_email start -->
        <td>
          <%= organization_email.organization_email %>
        </td>
        <!-- Display organization_email.organization_email end -->

        <!-- Display organization_email.created_at start -->
        <td>
          <%= time_ago_in_words(organization_email.created_at) %> ago
        </td>
        <!-- Display organization_email.created_at end -->

        <!-- Display organization_email.updated_at start -->
        <td>
          <%= time_ago_in_words(organization_email.updated_at) %> ago
        </td>
        <!-- Display organization_email.updated_at end -->

        <td>
          <a href="/organization_emails/<%= organization_email.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @organization_emails, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
