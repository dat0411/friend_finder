<% if @organization_email.errors.any? %>
  <% @organization_email.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit organization email #<%= @organization_email.id %>
</h1>

<hr>

<form action="/update_organization_email/<%= @organization_email.id %>" method="post">


  <div class="form-group">
    <label for="status">
      Status
    </label>

    <input type="text" id="status" name="status" class="form-control" value="<%= @organization_email.status %>">
  </div>

  <div class="form-group">
    <label for="organization_email">
      Organization email
    </label>

    <input type="text" id="organization_email" name="organization_email" class="form-control" value="<%= @organization_email.organization_email %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update organization email
  </button>
</form>

<hr>

<a href="/organization_emails">
  Go back
</a>
