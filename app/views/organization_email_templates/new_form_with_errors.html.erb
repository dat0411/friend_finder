<% if @organization_email.present? %>
  <% if @organization_email.errors.any? %>
    <% @organization_email.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new organization email
</h1>


<hr>

<form action="/create_organization_email" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="status">
      Status
    </label>

    <input type="text" id="status" name="status" class="form-control" value="<%= @organization_email.status %>">
  </div>

  <div class="form-group">
    <label for="organization_email">
      Organization email
    </label>

    <input type="text" id="organization_email" name="organization_email" class="form-control" value="<%= @organization_email.organization_email %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create organization email
  </button>
</form>

<hr>

<a href="/organization_emails">
  Go back
</a>
