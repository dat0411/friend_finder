<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Users

    <a data-toggle="collapse" href="#location_users_new_form">
      Add user
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @location.users.each do |user| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/users/<%= user.id %>">
          <%= user.email %>
        </a>

        <a href="/delete_user_from_location/<%= user.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="location_users_new_form">
        <%= render partial: "location_templates/location_users_new_form" %>
      </div>
    </div>

  </ul>
</div>
