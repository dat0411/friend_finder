<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All friendships
    </h1>

    <a href="/friendships/new" class="btn btn-block btn-outline-secondary">
      Add a new friendship
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sender
        </th>

        <th>
          Receiver
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @friendships.each do |friendship| %>
      <tr>
        <!-- Display friendship.id start -->
        <td>
          <%= friendship.id %>
        </td>
        <!-- Display friendship.id end -->

        <!-- Display friendship.sender_id start -->
        <td>
          <% if friendship.sender.present? %>
            <a href="/users/<%= friendship.sender.id %>">
              <%= friendship.sender.email %>
            </a>
          <% end %>
        </td>
        <!-- Display friendship.sender_id end -->

        <!-- Display friendship.receiver_id start -->
        <td>
          <% if friendship.receiver.present? %>
            <a href="/users/<%= friendship.receiver.id %>">
              <%= friendship.receiver.email %>
            </a>
          <% end %>
        </td>
        <!-- Display friendship.receiver_id end -->

        <!-- Display friendship.status start -->
        <td>
          <%= friendship.status %>
        </td>
        <!-- Display friendship.status end -->

        <!-- Display friendship.created_at start -->
        <td>
          <%= time_ago_in_words(friendship.created_at) %> ago
        </td>
        <!-- Display friendship.created_at end -->

        <!-- Display friendship.updated_at start -->
        <td>
          <%= time_ago_in_words(friendship.updated_at) %> ago
        </td>
        <!-- Display friendship.updated_at end -->

        <td>
          <a href="/friendships/<%= friendship.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @friendships, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
