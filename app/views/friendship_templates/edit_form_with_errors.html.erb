<!-- Validation failure messages -->
<% if @friendship.errors.any? %>
  <% @friendship.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit friendship #<%= @friendship.id %>
</h1>

<hr>

<!-- Form friendship start -->
<form action="/update_friendship/<%= @friendship.id %>" method="post">
<!-- Form friendship end -->

  <!-- Label and input for sender_id start -->
  <div class="form-group">
    <label for="sender_id">
      Sender
    </label>

    <!-- Input for sender_id start -->
    <input type="text" id="sender_id" name="sender_id" class="form-control" value="<%= @friendship.sender_id %>">
    <!-- Input for sender_id end -->
  </div>
  <!-- Label and input for sender_id end -->

  <!-- Label and input for receiver_id start -->
  <div class="form-group">
    <label for="receiver_id">
      Receiver
    </label>

    <!-- Input for receiver_id start -->
    <input type="text" id="receiver_id" name="receiver_id" class="form-control" value="<%= @friendship.receiver_id %>">
    <!-- Input for receiver_id end -->
  </div>
  <!-- Label and input for receiver_id end -->

  <!-- Label and input for status start -->
  <div class="form-group">
    <label for="status">
      Status
    </label>

    <!-- Input for status start -->
    <input type="text" id="status" name="status" class="form-control" value="<%= @friendship.status %>">
    <!-- Input for status end -->
  </div>
  <!-- Label and input for status end -->

  <button class="btn btn-block btn-outline-secondary">
    Update friendship
  </button>
</form>

<hr>

<a href="/friendships">
  Go back
</a>
