<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Friendship #<%= @friendship.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/friendships" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @friendship.receiver %>
          <a href="/friendships/<%= @friendship.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit friendship
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @friendship.receiver %>
          <a href="/delete_friendship/<%= @friendship.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete friendship
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Sender
      </dt>
      <dd>
        <% if @friendship.sender.present? %>
          <a href="/users/<%= @friendship.sender_id %>">
            <%= @friendship.sender.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Receiver
      </dt>
      <dd>
        <% if @friendship.receiver.present? %>
          <a href="/users/<%= @friendship.receiver_id %>">
            <%= @friendship.receiver.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Status
      </dt>
      <dd>
        <%= @friendship.status %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@friendship.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@friendship.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

