<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Group membership #<%= @group_membership.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/group_memberships" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link group_membership start -->
      <div class="col">
        <% if current_user == @group_membership.user %>
          <a href="/group_memberships/<%= @group_membership.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit group_membership
          </a>
        <% end %>
      </div>
      <!-- Edit link group_membership end -->

      <!-- Delete link group_membership start -->
      <div class="col">
        <% if current_user == @group_membership.user %>
          <a href="/delete_group_membership/<%= @group_membership.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete group_membership
          </a>
        <% end %>
      </div>
      <!-- Delete link group_membership end -->
    </div>

    <dl>
      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <%= @group_membership.user_id %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Group
      </dt>
      <!-- Display group_id start -->
      <dd>
        <%= @group_membership.group_id %>
      </dd>
      <!-- Display group_id end -->

      <dt>
        Admin approval
      </dt>
      <!-- Display admin_approval start -->
      <dd>
        <%= @group_membership.admin_approval %>
      </dd>
      <!-- Display admin_approval end -->

      <dt>
        User accept
      </dt>
      <!-- Display user_accept start -->
      <dd>
        <%= @group_membership.user_accept %>
      </dd>
      <!-- Display user_accept end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@group_membership.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@group_membership.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<!-- Show Page Customization end -->
