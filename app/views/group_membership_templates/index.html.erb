<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All group memberships
    </h1>

    <a href="/group_memberships/new" class="btn btn-block btn-outline-secondary">
      Add a new group membership
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "group_membership_templates/group_memberships_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Group
        </th>

        <th>
          Admin approval
        </th>

        <th>
          User accept
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @group_memberships.each do |group_membership| %>
      <tr>
        <td>
          <%= group_membership.id %>
        </td>

        <td>
          <% if group_membership.user.present? %>
            <a href="/users/<%= group_membership.user.id %>">
              <%= group_membership.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if group_membership.group.present? %>
            <a href="/groups/<%= group_membership.group.id %>">
              <%= group_membership.group.group_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= group_membership.admin_approval %>
        </td>

        <td>
          <%= group_membership.user_accept %>
        </td>

        <td>
          <%= time_ago_in_words(group_membership.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(group_membership.updated_at) %> ago
        </td>

        <td>
          <a href="/group_memberships/<%= group_membership.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @group_memberships, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
