<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All group memberships
    </h1>

    <a href="/group_memberships/new" class="btn btn-block btn-outline-secondary">
      Add a new group membership
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Group
        </th>

        <th>
          Admin approval
        </th>

        <th>
          User accept
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @group_memberships.each do |group_membership| %>
      <tr>
        <!-- Display group_membership.id start -->
        <td>
          <%= group_membership.id %>
        </td>
        <!-- Display group_membership.id end -->

        <!-- Display group_membership.user_id start -->
        <td>
          <%= group_membership.user.email %>
        </td>
        <!-- Display group_membership.user_id end -->

        <!-- Display group_membership.group_id start -->
        <td>
          <%= group_membership.group_id %>
        </td>
        <!-- Display group_membership.group_id end -->

        <!-- Display group_membership.admin_approval start -->
        <td>
          <%= group_membership.admin_approval %>
        </td>
        <!-- Display group_membership.admin_approval end -->

        <!-- Display group_membership.user_accept start -->
        <td>
          <%= group_membership.user_accept %>
        </td>
        <!-- Display group_membership.user_accept end -->

        <!-- Display group_membership.created_at start -->
        <td>
          <%= time_ago_in_words(group_membership.created_at) %> ago
        </td>
        <!-- Display group_membership.created_at end -->

        <!-- Display group_membership.updated_at start -->
        <td>
          <%= time_ago_in_words(group_membership.updated_at) %> ago
        </td>
        <!-- Display group_membership.updated_at end -->

        <td>
          <a href="/group_memberships/<%= group_membership.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
