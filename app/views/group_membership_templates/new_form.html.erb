<h1>
  Add a new group membership
</h1>


<hr>

<form action="/create_group_membership" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="group_id">
      Group
    </label>

    <%= select_tag(:group_id, options_from_collection_for_select(Group.all, :id, :group_name, @group_membership.group_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="admin_approval">
      Admin approval
    </label>

    <input type="text" id="admin_approval" name="admin_approval" class="form-control">
  </div>

  <div class="form-group">
    <label for="user_accept">
      User accept
    </label>

    <input type="text" id="user_accept" name="user_accept" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create group membership
  </button>
</form>

<hr>

<a href="/group_memberships">
  Go back
</a>
